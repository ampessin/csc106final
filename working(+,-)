draw = function() 
{
    for (var i = 0; i < calcButtons.length; i++)
    {
        calcButtons[i].draw();
    }
    fill(161, 155, 155);
    rect(60,10,260,76);
    textSize(20);
    fill(255, 255, 255);
    textAlign(RIGHT,CENTER);
    if (answer !== null)
    {
        text(answer, 314,47);
    }
    else if (a !== 0)
    {
        text(a, 314,47);
    }
    else if (b !== 0)
    {
        text(b, 314,47);
    }
};
